{
  "name": "finance-management",
  "version": "0.0.3",
  "author": {
    "name": "Jec√© Xavier Pereira Neto",
    "email": "jece@alunos.utfpr.edu.br"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "npm run services:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml -p fin-man up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "prisma:migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev",
    "prisma:migrate:deploy": "dotenv -e .env.development -- npx prisma migrate deploy",
    "prisma:studio": "npx prisma studio",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "postinstall": "husky install",
    "cm": "cz",
    "release": "standard-version --no-verify"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "@tanstack/react-query": "^5.18.1",
    "dayjs": "^1.11.10",
    "next": "14.0.4",
    "next-seo": "^6.4.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@rocketseat/eslint-config": "^2.1.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8",
    "prettier": "^3.1.1",
    "prisma": "^5.9.1",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
